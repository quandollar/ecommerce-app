<!-- turbo_frame_tag() helper creates the HTML element, and 
the dom_id() helper creates a unique id for every product -->
<%= turbo_frame_tag(dom_id(product)) do %>
    <li class='flex mb-6'>
    <%= image_tag(product.image_url, class: 'object-contain w-40 h-48 shadow mr-6') %>
    <div>
        <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
        <!-- sanitize allows admin to safely add HTML stylings to description, 
        https://owasp.org/www-community/attacks/xss/ -->
        <p><%= sanitize(product.description) %></p>
        <div class="mt-3">
        <!-- apply a helper method to format price -->
        <%= number_to_currency(product.price) %>

        <%= button_to 'Add to Cart', line_items_path(product_id: product), form_class: 'inline', 
        class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
        </div>
    </div>
    </li>
<% end %>