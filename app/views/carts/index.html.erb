<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-gray-50 mb-5 text-black-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Carts</h1>
    <%= link_to 'New cart', new_cart_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="carts" class="min-w-full">
    <%= render @carts %>
  </div>
</div>
