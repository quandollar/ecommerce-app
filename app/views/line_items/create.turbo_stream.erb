<%
# whenever we get a request that accepts a turbo stream response, we render it which includes
# turbo stream replace specifying an HTML element id of cart as the element to be replaced, 
# and rendering the partial which can be found in app/views/application/_cart.html.erb 
# using the value of instance variable @cart as the value of cart
%>

<%= turbo_stream.replace 'notice' do %>
  <%= render partial: 'store/notice', locals: {notice: @notice } %>
<% end %>

<%= turbo_stream.replace 'cart' do %>
  <%= render partial: 'layouts/cart', locals: {cart: @cart} %>
<% end %>
